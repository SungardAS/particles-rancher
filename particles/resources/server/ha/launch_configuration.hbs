{{#resource "m:core" "spec" type="AWS::AutoScaling::LaunchConfiguration"}}
"Metadata": {
  "AWS::CloudFormation::Init": {{partial "server/cf_init"}}
},
"Properties": {
  "BlockDeviceMappings": [
    {
      "DeviceName": "/dev/sda1",
      "Ebs": {
        "DeleteOnTermination": "true",
        "VolumeSize": {{cValue volumeSize}},
        "VolumeType": "gp2"
      }
    }
  ]
}
{{/resource}}
