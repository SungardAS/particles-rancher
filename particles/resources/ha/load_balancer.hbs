{{#resource "m:ec2" "load_balancer"}}
  "Properties": {
    "CrossZone": true,
    "SecurityGroups": {{cValue securityGroups}},
    "Subnets": {{cValue subnets}},
    "ConnectionSettings": {
      "IdleTimeout": 3600
    },
    "Listeners": [
      {
        "LoadBalancerPort": "80",
        "InstancePort": "8080",
        "Protocol": "TCP"
      }
    ],
    "Policies" : [{
      "PolicyName" : "EnableProxyProtocol",
      "PolicyType" : "ProxyProtocolPolicyType",
      "Attributes" : [{
        "Name"  : "ProxyProtocol",
          "Value" : "true"
        }],
      "InstancePorts": ["8080"]
    }],
    "HealthCheck": {
      "HealthyThreshold": "3",
      "Interval": "10",
      "Timeout": "5",
      "UnhealthyThreshold": "2",
      "Target": "HTTP:8080/ping"
    }
  }
{{/resource}}

