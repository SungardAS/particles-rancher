{{#layout}}

  {{set "host/parameters_ubuntu"}}

  {{mapping "ubuntu_ami" logicalId="AmiMap"}}

  {{
    set "host/instance"
    imageId='{"Fn::FindInMap": ["AmiMap", {"Ref": "AWS::Region"}, "xenial"]}'
    userData=(
      partial "userdata/ubuntu"
      dockerVersion='1.11'
      metadataResource="Instance"
      notifyResource="Instance"
    )
  }}

{{/layout}}
