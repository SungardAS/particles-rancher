---
frontload:
  amazonAmi:
    module: particles-ec2
    loader: ami
    opts:
      Owners: ["amazon"]
      Filters:
        -
          Name: state
          Values: ["available"]
        -
          Name: name
          Values: ["amzn-ami-hvm*x86_64-gp2"]
---
{{#layout}}

  {{set "host/parameters_amznlinux"}}
  {{
    set "host/instance"
    cattleHostLabels=(ref "CattleHostLabels")
    ImageId=amazonAmi
    UserData=(
      partial "userdata/amznlinux"
      dockerVersion='1.11'
      metadataResource="Instance"
      notifyResource="Instance"
    )
  }}

{{/layout}}
