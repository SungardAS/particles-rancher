{
  "Fn::Base64": {
    "Fn::Join": [
      "",
      [
        "#cloud-config\n",
        "repo_update: true\n",
        "repo_upgrade: all\n",
        "packages:\n",
        "  - docker\n",
        "runcmd:\n",
        "  - service docker start\n",
        "  -\n",
        "    - docker\n",
        "    - run\n",
        "    - --name\n",
        "    - aws-cfn-bootstrap\n",
        "    - -e\n",
        "    - CFN_METADATA_RESOURCE=",
        "",
        "\n",
        "    - -e\n",
        "    - CFN_NOTIFY_RESOURCE=",
        "",
        "\n",
        "    - -e\n",
        "    - CFN_CONFIG_SETS=",
        "default",
        "\n",
        "    - -e\n",
        "    - CFN_STACK_NAME=",
        {
          "Ref": "AWS::StackName"
        },
        "\n",
        "    - -e\n",
        "    - AWS_DEFAULT_REGION=",
        {
          "Ref": "AWS::Region"
        },
        "\n",
        "    - -e\n",
        "    - AWS_REGION=",
        {
          "Ref": "AWS::Region"
        },
        "\n",
        "    - -v\n",
        "    - /var/run/docker.sock:/var/run/docker.sock\n",
        "    - sungardas/aws-cfn-bootstrap\n"
      ]
    ]
  }
}
