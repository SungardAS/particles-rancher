{
  "Fn::Base64": {
    "Fn::Join": [
      "",
      [
        "#cloud-config\n",
        "rancher:\n",
        "  environment:\n",
        "    RESIZE_DEV: /dev/xvda\n",
        "  services_include:\n",
        "    kernel-headers: true\n",
        "    https://raw.githubusercontent.com/rancher/os-services/v0.4.5/r/resize-fs.yml: true\n",
        "  services:\n",
        "    aws-cfn-bootstrap:\n",
        "      image: sungardas/aws-cfn-bootstrap:",
        1.11,
        "\n",
        "      volumes:\n",
        "        - /var/run/docker.sock:/var/run/docker.sock\n",
        "      environment:\n",
        "        CFN_METADATA_RESOURCE: ",
        "",
        "\n",
        "        CFN_NOTIFY_RESOURCE: ",
        "",
        "\n",
        "        CFN_CONFIG_SETS: ",
        "default",
        "\n",
        "        CFN_STACK_NAME: ",
        {
          "Ref": "AWS::StackName"
        },
        "\n",
        "        AWS_DEFAULT_REGION: ",
        {
          "Ref": "AWS::Region"
        },
        "\n"
      ]
    ]
  }
}
